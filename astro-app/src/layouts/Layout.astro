---
import "../styles/global.css";
const { title = "Hustlers University UK", description = "Welcome to Hustlers University UK" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ðŸŸ§ FAVICONS â€“ TRW UK -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />

    <title>{title}</title>
    <meta name="description" content={description} />
    
    <script src="https://fast.wistia.net/player.js" async></script>
    
    <!-- Analytics / Tracking -->
<script src="/scripts/analytics.js" defer></script>
<script src="/scripts/clicky-loader.js" defer></script>
<script src="/scripts/clicky-extras.js" defer></script>
<script src="/scripts/clicky-actions.js" defer></script>
        
  </head>

  <body>
    <slot />
    <footer class="mt-24 border-t border-white/10 bg-[var(--color-bg)]">
  <div class="mx-auto max-w-7xl px-6 py-12">
    <div class="grid gap-8 md:grid-cols-2">
      
      <!-- Left: Company / Address -->
      <div class="space-y-3 text-sm text-[var(--color-text-muted)]">
        <p class="font-semibold text-[var(--color-text-light)]">
          Hustlers University UK
        </p>

        <p>
          Operated by <span class="font-medium">New Era Endeavour Ltd</span><br />
          18 Bellevue Street<br />
          Dumfries, DG1 3EJ<br />
          United Kingdom
        </p>

        <p>
          Support:
          <a
            href="mailto:support@hustlersuniversity.uk"
            class="text-[var(--color-orange)] hover:text-[var(--color-orange-dark)] transition"
          >
            support@hustlersuniversity.uk
          </a>
        </p>
      </div>

      <!-- Right: Credibility / Disclosure -->
      <div class="space-y-3 text-sm text-[var(--color-text-muted)]">
        <p class="font-semibold text-[var(--color-text-light)]">
          About This Platform
        </p>

        <p>
          Hustlers University UK is an online education and mentorship platform
          focused on practical skills, execution, and disciplined self-development.
        </p>

        <p>
          This website may contain affiliate links. We do not guarantee income,
          results, or financial outcomes. Success depends on individual effort,
          consistency, and execution.
        </p>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="mt-10 flex flex-col gap-3 border-t border-white/10 pt-6 text-xs text-[var(--color-text-muted)] md:flex-row md:items-center md:justify-between"
    >
      <p>
        Â© {new Date().getFullYear()} Hustlers University UK. All rights reserved.
      </p>

      <p class="opacity-70">
        Educational content only -- not financial advice.
      </p>
    </div>
  </div>
</footer>
  </body>
  
  
</html>
