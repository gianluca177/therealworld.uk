---
/* SECTION: INSTRUCTORS -- circular avatars placeholders */
const people = Array.from({ length: 6 }).map((_, i) => ({ name: `Instructor ${i+1}`, role: "Expert", }));
---
<section id="instructors" class="bg-black">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold text-center">OUR INSTRUCTORS</h2>
    <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-6 justify-items-center">
      {people.map((p) => (
        <div class="text-center">
          <div class="h-20 w-20 rounded-full bg-[#0b1f1a] border border-[#00ffae66]"></div>
          <div class="mt-2 text-sm font-semibold">{p.name}</div>
          <div class="text-xs text-gray-400">{p.role}</div>
        </div>
      ))}
    </div>
  </div>
</section>