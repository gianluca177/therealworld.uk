<section id="teach" class="bg-[#050b16] py-24">
  <div class="max-w-6xl mx-auto px-4">

    <!-- Title -->
    <h2 class="text-3xl md:text-4xl font-semibold text-center tracking-wide">
      <span class="bg-gradient-to-r from-[#e9b20a] to-[#ffaa30] bg-clip-text text-transparent">
        What Do We Teach?
      </span>
    </h2>

    <p class="mt-6 text-center text-gray-400 max-w-2xl mx-auto leading-relaxed">
      Inside The Real World you can choose from multiple skill tracks.
      Pick one path, go deep, and execute alongside other members.
    </p>

    <!-- Cards -->
    <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {tracks.map((t) => (
        <div class="relative group teach-card transition duration-300">

          <!-- Outer Glow -->
          <div
            class="absolute inset-0 rounded-2xl pointer-events-none
                   opacity-50 transition duration-300
                   group-hover:opacity-100 glow-layer"
            style="
              box-shadow:
                0 0 10px rgba(255,160,35,1),
                0 0 20px rgba(255,160,35,.45);
            "
          ></div>

          <!-- Card -->
          <div
            class="relative rounded-2xl overflow-hidden
                   bg-[#0B0F1A]
                   border border-[rgba(255,160,35,.6)]
                   transition duration-300
                   group-hover:border-[#ffa023]
                   group-hover:bg-[#111827]"
          >

            <!-- Inner Glow -->
            <div
              class="absolute inset-0 rounded-2xl pointer-events-none
                     opacity-50 transition duration-300
                     group-hover:opacity-100 inner-glow"
              style="box-shadow: inset 0 0 12px rgba(255,170,48,.25);"
            ></div>

            <!-- Grid -->
            <div
              class="absolute inset-0 opacity-[0.035] pointer-events-none"
              style="
                background-image:
                linear-gradient(to right, white 1px, transparent 1px),
                linear-gradient(to bottom, white 1px, transparent 1px);
                background-size: 52px 52px;
              "
            ></div>

            <!-- Image -->
            <div class="relative h-44 overflow-hidden">
              <img
                src={t.img}
                alt={`${t.h} track preview`}
                loading="lazy"
                class="h-full w-full object-cover transition duration-300 group-hover:scale-[1.05]"
              />

              <!-- Tag -->
              <div class="absolute left-4 top-4 z-10">
                <span
                  class="text-xs font-semibold px-3 py-1 rounded-full
                         bg-black/60 backdrop-blur
                         border border-[rgba(255,160,35,.6)]
                         text-[#ffaa30]"
                >
                  {t.tag}
                </span>
              </div>
            </div>

            <!-- Content -->
            <div class="relative z-10 p-6">
              <h3 class="text-lg font-semibold text-white">
                {t.h}
              </h3>

              <p class="mt-2 text-sm leading-relaxed text-gray-400">
                {t.p}
              </p>

              <div class="mt-5 h-px bg-white/10"></div>

              <p class="mt-4 text-xs text-gray-500">
                Step-by-step lessons + community execution.
              </p>
            </div>

          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="mt-16 flex justify-center">
      <a
        href="https://jointherealworld.com/checkout?a=7nrnndpb"
        class="btn px-12 py-4 text-base tracking-wide"
      >
        Join Now
      </a>
    </div>

    <p class="mt-6 text-center text-xs text-white/40">
      Educational platform â€” results depend on effort and circumstances.
