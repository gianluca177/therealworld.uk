---
import Button from "./Button.astro";
---

<nav class="navbar-fixed">
  <div class="max-w-app mx-auto flex items-center justify-between px-6 md:px-10 py-4">

    <!-- Logo -->
    <a href="#hero" class="group flex items-center" aria-label="Go to top">
      <img
        src="/Hustlers-University-therealworld-logo.png"
        alt="Hustlers University UK Logo"
        class="h-10 md:h-12 w-auto object-contain transition-transform duration-300 ease-out group-hover:scale-105 group-hover:-rotate-1"
      />
    </a>

    <!-- Desktop Links -->
    <ul class="hidden md:flex items-center gap-8 font-ui text-sm">
      <li><a href="#hero" class="nav-link">HOME</a></li>
      <li><a href="#about" class="nav-link">ABOUT</a></li>
      <li><a href="#plans" class="nav-link">PLANS</a></li>
      <li><a href="#philosophy" class="nav-link">PHILOSOPHY</a></li>
      <li><a href="#teach" class="nav-link">TEACH</a></li>
      <li><a href="#interviews" class="nav-link">INTERVIEWS</a></li>
      <li><a href="#faq" class="nav-link">FAQ</a></li>
    </ul>

    <!-- CTA + Mobile -->
    <div class="flex items-center gap-4">
      <Button href="https://jointherealworld.com/checkout?a=7nrnndpb">
        JOIN NOW
      </Button>

      <button
        id="menu-btn"
        class="md:hidden text-accent transition-opacity duration-200 hover:opacity-80"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

  </div>

  <!-- Mobile Dropdown -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-bg-soft backdrop-blur border-t border-white/10"
  >
    <div class="flex flex-col gap-5 px-6 py-6 font-ui text-sm">
      <a href="#hero" class="nav-link mobile-link">Home</a>
      <a href="#about" class="nav-link mobile-link">About</a>
      <a href="#plans" class="nav-link mobile-link">Plans</a>
      <a href="#philosophy" class="nav-link mobile-link">Philosophy</a>
      <a href="#teach" class="nav-link mobile-link">Teach</a>
      <a href="#interviews" class="nav-link mobile-link">Interviews</a>
      <a href="#faq" class="nav-link mobile-link">FAQ</a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      menu.classList.toggle('hidden');
    });

    document.querySelectorAll('.mobile-link').forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        btn.setAttribute('aria-expanded', 'false');
      });
    });
  }
</script>
