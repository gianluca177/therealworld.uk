<!-- src/components/NavBar.astro -->
<nav class="navbar-fixed">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 md:px-10 py-3 md:py-4">

    <!-- Left: Logo -->
    <a href="#hero" class="flex items-center group" aria-label="Go to top">
      <img
        src="/Hustlers-University-therealworld-logo.png"
        alt="Hustlers University UK Logo"
      />
    </a>

    <!-- Center: Nav Links (Desktop Only) -->
    <ul class="hidden md:flex space-x-8 text-sm font-medium navbar-links">
      <li><a href="#hero" class="navbar-link">HOME</a></li>
      <li><a href="#about" class="navbar-link">ABOUT</a></li>
      <li><a href="#plans" class="navbar-link">PLANS</a></li>
      <li><a href="#philosophy" class="navbar-link">PHILOSOPHY</a></li>
      <li><a href="#teach" class="navbar-link">TEACH</a></li>
      <li><a href="#interviews" class="navbar-link">INTERVIEWS</a></li>
      <li><a href="#faq" class="navbar-link">FAQ</a></li>
    </ul>

    <!-- Right: CTA + Mobile Menu Button -->
    <div class="flex items-center gap-3">
      <a href="https://jointherealworld.com/checkout?a=7nrnndpb" class="btn btn-navbar">
        JOIN NOW
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="menu-btn"
        class="md:hidden navbar-menu-btn"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

  </div>

  <!-- Mobile Dropdown Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-black/95 backdrop-blur border-t border-white/10"
  >
    <div class="flex flex-col space-y-4 px-6 py-6 text-sm font-medium">
      <a href="#hero" class="navbar-link mobile-link">Home</a>
      <a href="#about" class="navbar-link mobile-link">About</a>
      <a href="#plans" class="navbar-link mobile-link">Plans</a>
      <a href="#philosophy" class="navbar-link mobile-link">Philosophy</a>
      <a href="#teach" class="navbar-link mobile-link">Teach</a>
      <a href="#interviews" class="navbar-link mobile-link">Interviews</a>
      <a href="#faq" class="navbar-link mobile-link">FAQ</a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      menu.classList.toggle('hidden');
    });

    // Close menu when a link is clicked
    const mobileLinks = document.querySelectorAll('.mobile-link');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        btn.setAttribute('aria-expanded', 'false');
      });
    });
  }
</script>