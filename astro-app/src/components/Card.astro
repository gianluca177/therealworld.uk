---
/**
 * Card.astro — Unified reusable card component
 *
 * Clean base surface card.
 * No glow logic inside — glow handled externally via .plan-glow wrapper.
 */

interface Props {
  hover?: boolean;
  class?: string;
}

const {
  hover = false,
  class: className = '',
} = Astro.props;
---

<div
  class:list={[
    'relative rounded-2xl border transition-all duration-300',
    'bg-[var(--color-bg-secondary)] border-white/10 shadow-soft',
    hover && 'hover:border-[rgba(255,141,58,0.35)] hover:-translate-y-[2px] hover:shadow-strong',
    className,
  ]}
>
  <div class="relative z-10">
    <slot />
  </div>
</div>
