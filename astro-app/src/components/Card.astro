---
/**
 * Card.astro â€” Unified reusable card component
 *
 * Replaces: plan-card, teach-card, interview-card, card, panel, card-wrapper
 *
 * Usage:
 *   <Card>content</Card>
 *   <Card hover>hoverable content</Card>
 *   <Card glow>content with always-visible glow</Card>
 *   <Card hover glow class="p-8">custom padding</Card>
 */

interface Props {
  glow?: boolean;
  hover?: boolean;
  class?: string;
}

const {
  glow = false,
  hover = false,
  class: className = '',
} = Astro.props;
---

<div
  class:list={[
    'relative bg-panel rounded-card border border-white/10 shadow-soft transition-all duration-300',
    hover && 'hover:border-accent/40 hover:shadow-strong hover:-translate-y-0.5',
    className,
  ]}
>
  {glow && <div class="card-glow"></div>}
  <div class="relative z-10">
    <slot />
  </div>
</div>
