---
import NavBar from "./NavBar.astro";
import Card from "./Card.astro";
import AccentGlow from "./AccentGlow.astro";
---

<section
  id="hero"
  class="relative bg-bg text-white min-h-screen flex flex-col overflow-hidden"
>
  <!-- Navigation -->
  <NavBar />

  <!-- Hero Content -->
  <div class="relative z-10 flex flex-col items-center justify-center text-center flex-grow px-4 pt-28 pb-20">
    
    <!-- Logo -->
    <img
      src="/Hustlers-University-therealworld-logo.png"
      alt="Hustlers University UK Logo"
      class="mx-auto mb-6 max-h-24"
      loading="eager"
    />

    <h1
      class="hero glitch-layers font-extrabold tracking-tight"
      data-text="WELCOME TO THE REAL WORLD"
    >
      <span>
    WELCOME TO <span class="text-accent">HUSTLERS UNIVERSITY</span>
      </span>
    </h1>


    <!-- Subheading -->
    <p class="max-w-2xl mx-auto text-muted text-lg mt-4 mb-10 leading-relaxed">
      A modern education platform and community focused on practical online business skills.
      Learn step by step, apply in real time, and grow alongside other driven members.
    </p>

    <!-- Hero Video (Cloudflare Stream) -->
    <div class="relative w-full max-w-5xl mx-auto mb-10">
      <AccentGlow intensity="strong" class="-inset-4" />
      <Card class="relative z-10 overflow-hidden !rounded-2xl !border-accent/30 !p-0">
        <div class="aspect-video rounded-2xl overflow-hidden bg-black">
    <iframe
      src="https://customer-2tp30j9wazosgmgv.cloudflarestream.com/893a87f9dd7d8a6de34978eb3fc3a655/iframe?preload=true&poster=https%3A%2F%2Fcustomer-2tp30j9wazosgmgv.cloudflarestream.com%2F893a87f9dd7d8a6de34978eb3fc3a655%2Fthumbnails%2Fthumbnail.jpg%3Ftime%3D%26height%3D600"
      loading="lazy"
      style="border: none; position: absolute; top: 0; left: 0; height: 100%; width: 100%;"
      allow="accelerometer; gyroscope; autoplay; encrypted-media; picture-in-picture;"
      allowfullscreen="true"
    ></iframe>
        </div>
      </Card>
    </div>

    <!-- CTAs -->
    <div class="flex flex-wrap justify-center gap-4">
      <a
        href="https://jointherealworld.com/checkout?a=7nrnndpb"
        class="btn"
      >
        Join Hustlers University
      </a>

      <a
        href="#about"
        class="inline-flex items-center justify-center px-6 py-3 rounded-full border border-accent/30 text-accent font-semibold hover:bg-accent/5 transition"
      >
        Learn More
      </a>
    </div>

    <!-- Compliance Line -->
    <p class="mt-6 text-xs text-white/45">
      Educational platform. No earnings are promised. Results depend on individual effort.
    </p>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-20">
    <a
      href="#about"
      class="flex flex-col items-center text-white/45 hover:text-accent transition"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
      <span class="text-xs uppercase tracking-wider">Scroll</span>
    </a>
  </div>
</section>