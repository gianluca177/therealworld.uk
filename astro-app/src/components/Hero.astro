---
import NavBar from "./NavBar.astro";
---

<!-- ===================================================== -->
<!-- HERO SECTION -- Complete, Animated, and Modular (MVP-ready) -->
<!-- ===================================================== -->
<section
  id="hero"
  class="relative overflow-hidden bg-brand-bg text-brand-text min-h-screen flex flex-col"
>

  <!-- ðŸ”¸ 1. Navigation Bar -->
  <NavBar />

  <!-- ðŸ”¸ 2. Optional Background Video -->
  <!-- MVP DEFER: keep this for later; ship with low-opacity placeholder (no Cloudflare Stream setup today) -->
  <video
    autoplay
    loop
    muted
    playsinline
    preload="auto"
    class="absolute inset-0 w-full h-full object-cover opacity-20"
  >
    <source src="https://iframe.videodelivery.net/yourvideoid" type="video/mp4" />
  </video>

  <!-- ðŸ”¸ 3. Hero Content -->
  <div
    class="relative z-10 flex flex-col items-center justify-center text-center flex-grow px-4 py-24 animate-fadeIn"
  >
    <!-- ðŸŸ  Logo -->
    <!-- MVP DEFER: replace placeholder logo later with HD mark; keep for layout stability -->
    <img
      src="/placeholder-logo.png"
      alt="The Real World Logo"
      class="mx-auto h-20 w-20 mb-6 rounded-full border border-brand-gold object-cover animate-fadeInDelay"
    />

    <!-- ðŸŸ  Title -->
    <h1
      class="text-5xl md:text-6xl font-satoshi font-extrabold text-brand-gold drop-shadow-[0_0_25px_rgba(255,140,42,0.8)] glow-text animate-slideUp"
    >
      The Real World UK
    </h1>

    <!-- ðŸŸ  Subtitle / Tagline (MVP-compliant) -->
    <p class="max-w-2xl mx-auto text-brand-muted text-lg mt-4 mb-8 animate-fadeInDelay2">
      A community of digital entrepreneurs learning contemporary online business skills --
      with guidance from experienced mentors and peers. Educational platform; outcomes depend on your effort.
    </p>

    <!-- ðŸŸ  Video Placeholder -->
    <!-- MVP DEFER: real video embed later; keep the placeholder box -->
    <div
      class="w-full max-w-3xl h-64 bg-brand-panel border border-brand-orange rounded-base mb-8 flex items-center justify-center animate-fadeInDelay3"
    >
      <span class="text-brand-muted italic">[ Video Placeholder ]</span>
    </div>

    <!-- ðŸŸ  CTA Buttons -->
    <div class="flex flex-wrap justify-center gap-4 animate-fadeInDelay4">
      <a
        href="https://jointherealworld.com/?a=7nrnndpb&utm_source=therealworlduk&utm_medium=cta_hero"
        class="btn btn-primary"
      >
        Join The Real World
      </a>
      <a href="#about" class="btn btn-outline">Learn More</a>
    </div>

    <!-- ðŸŸ  Toggle Placeholder -->
    <!-- MVP DEFER: non-functional plan toggle; wire up later -->
    <div
      class="mt-10 inline-flex items-center gap-3 bg-brand-panel px-6 py-2 rounded-full text-sm animate-fadeInDelay5"
    >
      <span>Monthly</span>
      <span class="w-10 h-5 bg-brand-orange rounded-full"></span>
      <span>Yearly</span>
    </div>
  </div>

  <!-- ðŸ”¸ 4. Scroll Down Indicator -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 z-20 animate-bounceSlow">
    <a href="#about" class="flex flex-col items-center text-brand-muted hover:text-brand-gold transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
      <span class="text-xs uppercase tracking-wider font-medium">Scroll</span>
    </a>
  </div>
</section>
</section>