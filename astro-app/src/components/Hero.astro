    <!-- ðŸŸ  Video Placeholder -->
    <div
      class="w-full max-w-3xl h-64 bg-brand-panel border border-brand-orange rounded-base mb-8 flex items-center justify-center animate-fadeInDelay3"
    >
      <span class="text-brand-muted italic">[ Video Placeholder ]</span>
    </div>

    <!-- ðŸŸ  CTA Buttons -->
    <div class="flex flex-wrap justify-center gap-4 animate-fadeInDelay4">
