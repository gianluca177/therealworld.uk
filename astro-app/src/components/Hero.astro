---
import NavBar from "./NavBar.astro";
import Card from "./Card.astro";
import AccentGlow from "./AccentGlow.astro";
---

<section
  id="hero"
  class="relative bg-bg text-white flex flex-col min-h-screen"
>
  <NavBar />

  <div class="relative z-10 flex flex-col items-center justify-center text-center flex-grow px-4 pt-24 pb-16">

  <!-- Logo -->
  <img
    src="/Hustlers-University-therealworld-logo.png"
    alt="Hustlers University UK Logo"
    class="mx-auto mb-5 max-h-20 hidden sm:block"
    loading="eager"
  />

  <!-- Headline -->
  <div class="hero-container mb-6">
    <h1
      class="hero glitch layers"
      data-text="WELCOME TO THE REAL WORLD"
    >
      <span class="hero-top">WELCOME TO</span><br />
      <span class="hero-main text-accent">HUSTLERS UNIVERSITY</span>
    </h1>
  </div>

  <!-- Video -->
  <div class="relative w-full max-w-5xl mx-auto mb-8">
    <AccentGlow intensity="strong" class="-inset-4" />
    
    <Card class="relative z-10 overflow-hidden !rounded-2xl !border-accent/30 !p-0 video-glow">
      <div class="aspect-video rounded-2xl overflow-hidden bg-black relative">

        <!-- Wistia Scripts -->
        <script src="https://fast.wistia.com/player.js" async></script>
        <script
          src="https://fast.wistia.com/embed/qkkqo44eoi.js"
          async
          type="module"
        ></script>

        <!-- Wistia Player -->
        <wistia-player
          media-id="qkkqo44eoi"
          seo="false"
          loading="lazy"
          class="absolute top-0 left-0 w-full h-full"
        ></wistia-player?>
      </div>
    </Card>
  </div>

  <!-- Subtitle -->
  <h2 class="hero-subtitle mb-3">
    Hustlers University Has Now Upgraded to The Real World
  </h2>

  <!-- Gradient Line -->
  <div class="gradient-line mb-8"></div>

  <!-- Primary CTA -->
  <a
    href="https://jointherealworld.com/checkout?a=7nrnndpb"
    class="btn mb-6"
  >
    Join Hustlers University
  </a>

  <!-- Disclaimer -->
  <p class="hero-disclaimer">
    Limited spaces available. Act fast.
  </p>
  </div>
</section>
