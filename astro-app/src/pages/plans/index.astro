---
import Layout from "../../layouts/Layout.astro";

const plans = [
  {
    name: "Conquer",
    tag: "Available",
    priceMain: "$99",
    priceSub: "per month",
    bullets: [
      "Access to all skill campuses",
      "Step-by-step learning & priority support",
      "Community chats + mentor guidance",
      "Cancel anytime via the official provider",
    ],
    cta: "Continue to official checkout",
    href: "https://jointherealworld.com/checkout?a=7nrnndpb",
    featured: true,
    status: "active", // active | soldout | limited
  },
  {
    name: "Champion",
    tag: "Limited",
    priceMain: "From $99",
    priceSub: "availability varies",
    bullets: [
      "Availability can change",
      "Confirm details on the official checkout",
      "No payments processed on this website",
    ],
    cta: "View official plans",
    href: "https://jointherealworld.com/checkout?a=7nrnndpb",
    featured: false,
    status: "limited",
  },
  {
    name: "Vanguard",
    tag: "Sold out",
    priceMain: "$499",
    priceSub: "not currently available",
    bullets: [
      "Status shown on official checkout",
      "Some tiers may be closed/sold out",
      "See current options instantly",
    ],
    cta: "View official plans",
    href: "https://jointherealworld.com/checkout?a=7nrnndpb",
    featured: false,
    status: "soldout",
  },
];
---

<Layout
  title="Plans | Hustlers University UK"
  description="Choose a plan and continue to the official checkout."
>
  <section class="bg-[#000000] text-white">
    <div class="max-w-6xl mx-auto px-4 py-20">
      <!-- Logo / Top spacing (optional, keeps it closer to checkout vibe) -->
      <div class="flex justify-center">
        <img
          src="/hu-logo-512.png"
          alt="Hustlers University UK"
          class="h-12 w-12 rounded-full border border-white/10 object-cover"
          loading="lazy"
        />
      </div>

      <h1 class="mt-6 text-3xl md:text-5xl font-bold text-center text-white tracking-tight">
        Choose Your Plan
      </h1>

      <!-- Toggle (visual only) -->
      <div class="mt-8 flex items-center justify-center gap-4 text-sm">
        <span class="text-white/80 font-medium">Monthly</span>

        <div class="relative h-7 w-14 rounded-full bg-white/10 border border-white/10">
          <div class="absolute top-1 left-1 h-5 w-5 rounded-full bg-[#FF8C2A] shadow-[0_0_18px_rgba(255,140,42,0.35)]"></div>
        </div>

        <span class="text-white/60">
          Yearly <span class="text-green-400 font-semibold">(17% off)</span>
        </span>
      </div>

      <!-- Cards -->
      <div class="mt-12 grid gap-8 md:grid-cols-2 md:justify-center md:items-start">
        <!-- Conquer + Vanguard side-by-side on desktop like checkout -->
        <div class="grid gap-8 md:grid-cols-2 md:col-span-2 md:max-w-4xl md:mx-auto">
          {plans.slice(0, 2).map((p) => (
            <div
              class={[
                "relative rounded-3xl bg-[#0F0F0F] border p-7 md:p-8 transition",
                p.featured
                  ? "border-[#FF8C2A66] shadow-[0_0_0_1px_rgba(255,140,42,0.16),0_0_42px_rgba(255,140,42,0.20)]"
                  : "border-white/10 hover:border-[#FF8C2A33]",
              ].join(" ")}
            >
              {/* SOLD OUT ribbon */}
              {p.status === "soldout" && (
                <div class="absolute top-5 right-5 rotate-12">
                  <span class="inline-flex items-center rounded-full bg-red-600/20 border border-red-500/40 px-3 py-1 text-[11px] font-semibold text-red-200">
                    SOLD OUT
                  </span>
                </div>
              )}

              {/* Header */}
              <div class="flex items-start justify-between gap-4">
                <div>
                  <p class="text-xs tracking-widest text-white/60 uppercase">
                    {p.name}
                  </p>

                  <div class="mt-2 flex items-end gap-2">
                    <span class="text-4xl font-extrabold text-white leading-none">
                      {p.priceMain}
                    </span>
                    <span class="text-xs text-white/60 mb-1 uppercase tracking-wider">
                      {p.priceSub}
                    </span>
                  </div>
                </div>

                <span class="text-[10px] px-3 py-1 rounded-full border border-white/10 text-white/70">
                  {p.tag}
                </span>
              </div>

              {/* Bullets */}
              <ul class="mt-6 space-y-3 text-sm text-white/70">
                {p.bullets.map((b) => (
                  <li class="flex items-start gap-3">
                    <span class="mt-2 h-1.5 w-1.5 rounded-full bg-[#22c55e]"></span>
                    <span>{b}</span>
                  </li>
                ))}
              </ul>

              {/* CTA */}
              <div class="mt-8">
                <a
                  href={p.href}
                  class={[
                    "inline-flex w-full items-center justify-center rounded-xl px-6 py-3 font-semibold transition",
                    p.featured
                      ? "bg-white/10 border border-white/15 text-white hover:border-[#FF8C2A55] hover:bg-white/5"
                      : "bg-white/5 border border-white/10 text-white/80 hover:text-white hover:border-[#FF8C2A33]",
                    p.status !== "active" ? "opacity-70" : "",
                  ].join(" ")}
                >
                  {p.cta}
                </a>
              </div>
            </div>
          ))}
        </div>

        {/* Vanguard card below (optional third like your earlier concept) */}
        <div class="md:col-span-2 md:max-w-4xl md:mx-auto">
          {plans.slice(2, 3).map((p) => (
            <div class="relative rounded-3xl bg-[#0F0F0F] border border-white/10 p-7 md:p-8 transition hover:border-[#FF8C2A33]">
              {p.status === "soldout" && (
                <div class="absolute top-5 right-5 rotate-12">
                  <span class="inline-flex items-center rounded-full bg-red-600/20 border border-red-500/40 px-3 py-1 text-[11px] font-semibold text-red-200">
                    SOLD OUT
                  </span>
                </div>
              )}

              <div class="flex items-start justify-between gap-4">
                <div>
                  <p class="text-xs tracking-widest text-white/60 uppercase">
                    {p.name}
                  </p>

                  <div class="mt-2 flex items-end gap-2">
                    <span class="text-4xl font-extrabold text-white leading-none">
                      {p.priceMain}
                    </span>
                    <span class="text-xs text-white/60 mb-1 uppercase tracking-wider">
                      {p.priceSub}
                    </span>
                  </div>
                </div>

                <span class="text-[10px] px-3 py-1 rounded-full border border-white/10 text-white/70">
                  {p.tag}
                </span>
              </div>

              <ul class="mt-6 space-y-3 text-sm text-white/70">
                {p.bullets.map((b) => (
                  <li class="flex items-start gap-3">
                    <span class="mt-2 h-1.5 w-1.5 rounded-full bg-[#22c55e]"></span>
                    <span>{b}</span>
                  </li>
                ))}
              </ul>

              <div class="mt-8">
                <a
                  href={p.href}
                  class="inline-flex w-full items-center justify-center rounded-xl px-6 py-3 font-semibold transition bg-white/5 border border-white/10 text-white/80 hover:text-white hover:border-[#FF8C2A33]"
                >
                  {p.cta}
                </a>

                <p class="mt-3 text-xs text-white/40">
                  Note: This card is informational. Availability is shown on the official checkout.
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Social proof line like checkout -->
      <div class="mt-10 flex items-center justify-center gap-3 text-sm text-white/70">
        <div class="flex -space-x-2">
          <span class="h-6 w-6 rounded-full bg-white/10 border border-white/10"></span>
          <span class="h-6 w-6 rounded-full bg-white/10 border border-white/10"></span>
          <span class="h-6 w-6 rounded-full bg-white/10 border border-white/10"></span>
        </div>
        <p>
          Join <span class="text-[#FF8C2A] font-semibold">155,000+</span> members already leveling up inside
        </p>
      </div>

      <!-- Asterisk line like checkout -->
      <div class="mt-8 text-center text-xs text-white/45">
        <p>*All prices are presented in USD.</p>
        <p class="mt-2">
          This website does not process payments. Plan details and checkout are handled on the official provider site.
        </p>
      </div>
    </div>
  </section>
</Layout>